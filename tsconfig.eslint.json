  "extends": "./tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.mts",
    "./**/*.js",
    "./**/*.mjs",
    "./**/*.cjs",
    "./.*.mjs",
    "./.*.cjs"
