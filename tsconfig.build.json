{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": false,
    "pretty": false,
    "removeComments": true
  },
  "exclude": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.test.ts",
    "**/*spec.ts",
    "**/*test.ts", // especial container test files
    "./src/**/*/test",
    "./src/**/*/tsyringe-dependency-injection",
    "dist",
    "jest.config.ts",
    "jest.setup.ts",
    "node_modules",
    "tests",
    // TODO: remove on full ecmascript modules migration
    "./src/apps/backoffice",
    "./src/apps/bank",
    "./src/apps/blog",
    "./src/apps/land",
    "./src/Contexts/Backoffice",
    "./src/Contexts/Bank",
    "./src/Contexts/BankAtm",
    "./src/Contexts/BankBranch",
    "./src/Contexts/Blog",
    "./src/Contexts/Land"
  ]
}
