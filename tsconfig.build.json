{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": false,
    "pretty": false,
    "removeComments": true
  },
  "exclude": [
    "**/*.js",
    "**/*.test.ts",
    "**/*spec.ts",
    "**/*test.ts", // especial container test files
    "dist",
    "jest.config.ts",
    "jest.setup.ts",
    "node_modules",
    "tests"
  ]
}
