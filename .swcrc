{
  "exclude": "node_modules/",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true,
      "topLevelAwait": true
    },
    "transform": {
      "decoratorMetadata": true
    },
    "target": "esnext"
  },
  "module": {
    "type": "nodenext"
  },
  "sourceMaps": true
}
