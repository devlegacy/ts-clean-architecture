{
  "files.eol": "\n",
  "files.exclude": {
    ".cache": true,
    ".commitlintrc.js": true,
    ".czrc": true,
    ".data": true,
    ".etc": true,
    ".docker": true,
    ".dockerignore": true,
    ".editorconfig": true,
    ".eslintignore": true,
    ".eslintrc.js": true,
    ".eslintrc": true,
    ".husky": true,
    ".idea": true,
    ".lintstagedrc.json": true,
    ".npmrc": true,
    ".nvmrc": true,
    ".prettierignore": true,
    ".prettierrc": true,
    ".tmp": true,
    ".vscode": false,
    "*.example": true,
    "*.xml": true,
    // "*.yml": true,
    "**/.DS_Store": true,
    ".github": true,
    ".gitattributes": true,
    ".gitignore": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.code-search": true,
    "**/*.map": true,
    "**/bower_components/": true,
    "**/CVS": true,
    "**/node_modules/": true,
    "*git*": true,
    "*lock*": true, // lock files
    "ABOUT.md": true,
    "CHANGELOG.md": true,
    "coverage": true,
    "cucumber.js": true,
    "cz.js": true,
    "dist": true,
    "docs": true,
    "jest.config.[j|t]s": true,
    "jest.setup.[j|t]s": true,
    "license": true,
    "LICENSE": true,
    "nbproject": true,
    "nodemon.json": true,
    // "tests": true,
    "tsconfig*.json": true,
    "tsconfig*.tsbuildinfo": true,
    // "types": true,
    "yarn-error.log": true
  },
  "prettier.requireConfig": true,
  "material-icon-theme.files.associations": {
    "Command.ts": "command"
  },
  "material-icon-theme.folders.associations": {
    "infrastructure": "Cluster",
    "application": "app",
    "domain": "core",
    "exceptions": "error",
    "persistence": "database"
  },
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "NOTE", "DOC", "DEBT", "TRANSLATE"],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "issue-opened",
      "gutterIcon": true,
      "iconColour": "#FFD580"
    },
    "BUG": {
      "icon": "bug",
      "gutterIcon": true,
      "iconColour": "#FF6B6B"
    },
    "HACK": {
      "icon": "tools",
      "gutterIcon": true,
      "iconColour": "#A3A3A3"
    },
    "FIXME": {
      "icon": "flame",
      "gutterIcon": true,
      "iconColour": "#FF926B"
    },
    "NOTE": {
      "icon": "note",
      "gutterIcon": true,
      "iconColour": "#6BC1FF"
    },
    "DOC": {
      "icon": "book",
      "gutterIcon": true,
      "iconColour": "#86D2B5"
    },
    "DEBT": {
      "icon": "issue-reopened",
      "gutterIcon": true,
      "iconColour": "#F06C9B"
    },
    "TRANSLATE": {
      "icon": "globe",
      "gutterIcon": true,
      "iconColour": "#A29BFE"
    }
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|\\s\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "typescript.tsserver.log": "verbose",
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "dotenv.enableAutocloaking": false,
  "nodejs-testing.include": ["./tests", "./src"],
  "nodejs-testing.extensions": [
    {
      "extensions": ["ts"],
      "parameters": ["--import", "@swc-node/register/esm-register"],
      "filePatterns": ["**/*node.test.ts"]
    }
  ],
  "nodejs-testing.env": {
    "APP_ENV": "test"
  },
  // "jest.autoRun": {
  //   "watch": false,
  //   "onSave": "test-file"
  // },
  "jest.nodeEnv": { "APP_ENV": "test" },
  "jest.rootPath": "./tests/"
}
