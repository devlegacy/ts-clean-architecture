{
  "name": "ts-clean-architecture",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "prepare": "husky install",
    "build": "npm run build:tsc",
    "postbuild": "cpy src/**/*.json dist",
    "build:clean": "rm -f tsconfig.build.tsbuildinfo && rm -Rf ./dist/* ; exit 0",
    "build:tsc": "tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.json -s ./src -o ./dist",
    "start:mooc:api": "node ./dist/apps/mooc/backend/main.js",
    "start:user:console:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/console/main.ts",
    "start:user:api:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/backend/main.ts",
    "start:user:graph:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/user/graphql/main.ts",
    "start:mooc:api:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/mooc/backend/main.ts",
    "prune:mooc": "ts-prune --project tsconfig.build.json && ts-unused-exports tsconfig.build.json",
    "prune:mooc:filter": "ts-prune --project tsconfig.build.json | grep -v '(used in module)'",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "jest --runInBand --detectOpenHandles",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "cucumber-js -p mooc_backend",
    "test:mooc:backend:load": "autocannon http://localhost:8080/status/",
    "lint": "eslint --color ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "package:clean": "rm -Rf ./node_modules && rm -f ./package-lock.json && rm -f ./yarn.lock",
    "package:install": "npm install && npm audit fix",
    "package:install:legacy": "npm install --legacy-peer-deps && npm audit fix --legacy-peer-deps",
    "package:refresh": "npm run package:clean && npm run package:update",
    "package:refresh:legacy": "npm run package:clean && npm run package:update:legacy",
    "package:update": "ncu -u && npm run package:install",
    "package:update:minor": "ncu -u --target=minor  && npm run package:install",
    "package:update:minor:legacy": "ncu -u --target=minor && npm run package:install:legacy",
    "package:update:legacy": "ncu -u && npm run package:install:legacy",
    "package:update:interactive": "ncu --interactive"
  },
  "keywords": [],
  "author": "Samuel R. <samuel@devexteam.com> (https://devexteam.com)",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "5.0.0",
    "@fastify/cookie": "6.0.0",
    "@fastify/cors": "7.0.0",
    "@fastify/helmet": "8.1.0",
    "@fastify/rate-limit": "6.0.1",
    "@graphql-tools/schema": "9.0.1",
    "@sentry/node": "^7.11.1",
    "@sentry/tracing": "^7.11.1",
    "ajv": "8.11.0",
    "apollo-server-core": "3.10.2",
    "apollo-server-fastify": "3.10.2",
    "convict": "6.2.3",
    "cpy-cli": "4.2.0",
    "dotenv": "16.0.1",
    "dotenv-expand": "8.0.3",
    "env-schema": "5.0.0",
    "fastify": "3.29.1",
    "graphql": "16.6.0",
    "http-errors": "2.0.0",
    "http-status": "1.5.2",
    "joi": "17.6.0",
    "joi-class-decorators": "1.1.0",
    "mongodb": "4.9.0",
    "mongoose": "6.5.3",
    "pg": "8.8.0",
    "pino": "8.4.2",
    "pino-pretty": "9.1.0",
    "reflect-metadata": "0.1.13",
    "ts-toolbelt": "9.6.0",
    "tsyringe": "4.7.0",
    "typeorm": "0.3.7",
    "uuid": "8.3.2",
    "uuid-validate": "0.0.3",
    "zod": "3.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@cucumber/cucumber": "8.5.2",
    "@faker-js/faker": "7.4.0",
    "@types/convict": "6.1.1",
    "@types/http-errors": "1.8.2",
    "@types/jest": "28.1.8",
    "@types/node": "18.7.13",
    "@types/supertest": "2.0.12",
    "@types/uuid": "8.3.4",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "autocannon": "7.9.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.7",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "8.0.1",
    "jest": "29.0.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "resolve-tspaths": "0.7.4",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "ts-prune": "0.10.3",
    "ts-unused-exports": "8.0.0",
    "tsconfig-paths": "4.1.0",
    "tslib": "2.4.0",
    "tslint-config-prettier": "1.18.0",
    "type-fest": "2.19.0",
    "typescript": "4.8.2"
  },
  "optionalDependencies": {
    "npm-check-updates": "16.0.5"
  },
  "engines": {
    "node": ">=16.15.0 <=18.7.0",
    "npm": ">=8.12.1"
  }
}
