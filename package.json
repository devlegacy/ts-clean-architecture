{
  "name": "ts-clean-architecture",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run build:clean",
    "prepare": "husky install",
    "build": "npm run build:tsc",
    "build:clean": "rm -f tsconfig.build.tsbuildinfo && rm -Rf ./dist/* ; exit 0",
    "build:tsc": "tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node ./dist/infrastructure/driving-adapters/api-rest/main.js",
    "start:console": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register ./src/infrastructure/driving-adapters/console/console.ts",
    "start:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/infrastructure/driving-adapters/api-rest/main.ts",
    "start:mooc:debug": "tsnd --project tsconfig.json --files --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register --inspect -- ./src/apps/mooc/backend/main.ts",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "jest --runInBand --detectOpenHandles",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "cucumber-js -p mooc_backend",
    "lint": "eslint --color ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "package:update": "ncu -u && npm i && npm audit fix"
  },
  "keywords": [],
  "author": "Samuel R. <samuel@devexteam.com> (https://devexteam.com)",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^6.1.0",
    "@fastify/cookie": "^7.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "@fastify/rate-limit": "^7.0.0",
    "convict": "^6.2.3",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3",
    "fastify": "^4.0.3",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "joi-class-decorators": "^1.0.4",
    "mongodb": "^4.7.0",
    "pino": "^8.0.0",
    "pino-pretty": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@cucumber/cucumber": "^8.3.0",
    "@faker-js/faker": "^7.2.0",
    "@types/convict": "^6.1.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "resolve-tspaths": "^0.6.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "tslib": "^2.4.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "optionalDependencies": {
    "npm-check-updates": "^14.0.1"
  },
  "engines": {
    "node": ">=16.15.0 <=18.1.0",
    "npm": ">=8.12.1"
  }
}
