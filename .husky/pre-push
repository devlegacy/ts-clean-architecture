#!/usr/bin/env sh

COLORS_PATH=$(dirname "$0")/../.bin/colors.sh
[ -f "${COLORS_PATH}" ] && source "${COLORS_PATH}"

# ObtÃ©n el nombre de la rama actual
branch=$(git branch --show-current)

# Comprueba si la rama actual es master o develop
if [ "$branch" = "master" ] || [ "$branch" = "develop" ]; then
  echo "ðŸš« ${COLOR_RED}You can't push directly to <${branch}> branch. Please create a new branch and try again.${COLOR_RESET}"
  exit 1
fi

